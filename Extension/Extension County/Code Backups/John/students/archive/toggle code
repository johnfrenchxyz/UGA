---- JS   ----

$( ".toggle.panel" ).click(function() {
  $( ".front" ).slideToggle( "fast", function() {
    // Animation complete.
  });
});

---- CSS  ----

.toggle.panel {
	position:relative;
	display:block;
	padding:rem-calc(0);
	overflow:hidden;
	.title {
		padding:rem-calc(16);
		clear:left;
	}
	.front {
		.title {
			position:relative;
		}
		.image {
			display:block;
			position:relative;
			top:0;
		}
	}
	.back {
		padding-bottom:rem-calc(16);
		.title {
			position:relative;
			top:0;
			padding-bottom:rem-calc(0);
		}
		.description {
			display:block;
		}
		position:absolute;
		right:0;
	}	
}



-----OLD CSS THAT ISN'T USED----

// TOGGLE BLOCK 


.toggle-block {
	@include block-grid (
		$spacing:1em,
		$base-style:true
	);
	li {
		//padding:0;
		//margin:rem-calc(10);
		> div {
			background-color:$silver;	
			display:block;
			min-height:rem-calc(250);
			max-height:rem-calc(250);
			position:relative;
			overflow:hidden;
			border:1px solid lighten($secondary-color,80%);
		}
		p {
			line-height:1.25em;
			font-size:rem-calc(12);
			margin-bottom:rem-calc(6);
		}
		.title {
			font-weight:300;
			line-height:1.25em;
			padding:rem-calc(8);
			position:absolute;
			top:150px;
			display:block;
		}
		.front {
			min-height:150px;
			max-height:150px;
			overflow:hidden;
			background-color:darken($silver,20%);
			position:absolute;
			top:0;
			// why does this have an 8px overhang?
		}
		.back {
			display:none;
			padding:rem-calc(0 8 8);
			background-color:$silver;
		}
	}
	/*li.first-state {
		.title {top:150px;}
		.front{display:block;}
		.back{display:none;}
	}*/
	li.second-state {
		.title {position:relative;top:0px;}
		.front{display:none;}
		.back{display:block;}
	}
}


